<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_bar_height"
    android:layout_gravity="bottom"
    android:background="@color/transparent"
    tools:background="@color/black_70">

    <include layout="@layout/custom_divider"/>

    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/background_button_post_mask">

        <ImageView
            android:id="@+id/main_action_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/layer_hl_symbol"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/main_layout"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/bottom_global_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/icon_global_search"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/background_button_bottom_bar"
                app:srcCompat="@drawable/transition_global_search"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottom_timeline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/icon_timeline"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/background_button_bottom_bar"
                app:srcCompat="@drawable/transition_timeline"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/main_layout"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/bottom_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/background_button_bottom_bar"
                app:srcCompat="@drawable/transition_aboutme_2"/>

            <View
                android:id="@+id/notification_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="end"
                android:layout_marginTop="14dp"
                android:background="@drawable/layer_notifications_badge"
                android:visibility="visible"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottom_chats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/icon_chats"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/background_button_bottom_bar"
                app:srcCompat="@drawable/transition_chats"
                />

            <View
                android:id="@+id/notification_dot_chat"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="end"
                android:background="@drawable/layer_notifications_badge"
                android:visibility="visible"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>