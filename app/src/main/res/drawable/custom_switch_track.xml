<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">

            <corners android:radius="95dp" />
            <solid android:color="@color/colorAccent" />

            <size android:height="130dp"
                  android:width="270dp"/>
            <padding android:right="30dp"
                     android:top="30dp"
                     android:left="30dp"
                     android:bottom="30dp"/>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">

            <corners android:radius="95dp" />
            <solid android:color="@color/divider_on_white" />

            <size android:height="130dp"
                  android:width="270dp"/>
            <padding android:right="30dp"
                     android:top="30dp"
                     android:left="30dp"
                     android:bottom="30dp"/>
        </shape>
    </item>
</selector>