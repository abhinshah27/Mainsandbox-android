<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_margin_lg"
            android:paddingBottom="@dimen/activity_margin_lg"
            style="@style/ScrollbarStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/years_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Regular18"
                android:text="@string/wish_picker_year"
                android:duplicateParentState="true"
                />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY=".8"
                android:scaleX=".8"
                app:np_fadingEdgeEnabled="true"
                app:np_textColor="@color/colorAccent"
                app:np_selectedTextColor="@color/colorAccent"
                app:np_dividerColor="@color/colorAccent"
                app:np_min="0"
                app:np_max="200"
                app:np_scrollerEnabled="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_lg"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Regular18"
                android:text="@string/wish_picker_time"
                />

            <include layout="@layout/custom_wish_time_picker"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>