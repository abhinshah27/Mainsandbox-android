<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:layout_gravity="center_horizontal">

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/hour_of_day"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".333333333333333333"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scaleY=".8"
        android:scaleX=".8"
        app:np_fadingEdgeEnabled="true"
        app:np_textColor="@color/colorAccent"
        app:np_selectedTextColor="@color/colorAccent"
        app:np_dividerColor="@color/colorAccent"
        app:np_min="0"
        app:np_max="23"
        app:np_scrollerEnabled="true"/>

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/minute"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".333333333333333333"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scaleY=".8"
        android:scaleX=".8"
        app:np_fadingEdgeEnabled="true"
        app:np_textColor="@color/colorAccent"
        app:np_selectedTextColor="@color/colorAccent"
        app:np_dividerColor="@color/colorAccent"
        app:np_min="0"
        app:np_max="59"
        app:np_scrollerEnabled="true"/>

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/ante_post_meridiem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".333333333333333333"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scaleY=".8"
        android:scaleX=".8"
        app:np_fadingEdgeEnabled="true"
        app:np_textColor="@color/colorAccent"
        app:np_selectedTextColor="@color/colorAccent"
        app:np_dividerColor="@color/colorAccent"
        app:np_min="0"
        app:np_max="1"
        app:np_scrollerEnabled="true"/>

</LinearLayout>