<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/post_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        app:cardBackgroundColor="@color/divider_on_white"
        app:cardCornerRadius="8dp">
        android:transitionName="wish_post_enlarge"

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/prev_post_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_placeholder_image"/>

                <ImageView
                    android:id="@+id/image_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/black_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_10"/>
            </FrameLayout>

            <!-- TODO   change card background color at runtime -->
            <FrameLayout
                android:id="@+id/prev_post_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/wave3"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:lottie_autoPlay="false" />

                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_mic_rec_play_inactive"
                    />

                <FrameLayout
                    android:id="@+id/pause_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:padding="10dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/pause_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_mic_rec_pause" />
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:animateLayoutChanges="true">

                    <ProgressBar
                        android:id="@+id/progress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:indeterminate="true"/>

                    <TextView
                        android:id="@+id/progress_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progress"
                        android:layout_marginTop="10dp"
                        style="@style/Regular14"
                        android:text="@string/buffering_audio"
                        android:textColor="@color/colorAccent"
                        android:visibility="visible"/>
                </RelativeLayout>

            </FrameLayout>

            <!-- TODO   change card background color at runtime -->
            <include layout="@layout/cpost_background_video_vv"
                     android:id="@+id/prev_post_video"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/prev_post_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <androidx.emoji.widget.EmojiAppCompatTextView
                    android:id="@+id/post_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:gravity="start|center_vertical"
                    style="@style/Regular14"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    tools:text="Bla bla bla"/>
            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_vertical_margin">

                <include layout="@layout/custom_layout_profile_picture"
                         android:id="@+id/post_enlarge_avatar"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/post_enlarge_author"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/BoldShadow18"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:gravity="center_vertical"
                    tools:text="Joanne Smith"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/post_enlarge_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/BoldShadow16"
                    android:textColor="@color/white"
                    tools:text="Dec 25, 2008" />

                <TextView
                    android:id="@+id/post_enlarge_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/RegularShadow16"
                    android:textColor="@color/white"
                    tools:text="Joanne Smith"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/caption_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin"
                android:layout_marginEnd="@dimen/activity_margin"
                android:layout_above="@id/bottom_section"
                android:layout_gravity="bottom"
                android:weightSum="1">

                <androidx.emoji.widget.EmojiAppCompatTextView
                    android:id="@+id/post_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:gravity="bottom"
                    style="@style/RegularShadow15"
                    android:ellipsize="end"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna "
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>