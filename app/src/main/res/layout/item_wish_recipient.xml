<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:gravity="center_vertical"
    android:background="@drawable/selector_wish_recip_ic_item"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <include layout="@layout/custom_layout_profile_picture"
             android:id="@+id/profile_picture"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginEnd="@dimen/activity_margin_lg"
             android:layout_alignParentStart="true"
             android:layout_centerVertical="true"
        />

    <View
        android:id="@+id/check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:tint="@color/colorAccent"
        android:background="@drawable/selector_wish_recip_ic"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/check"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_margin_lg"
        android:layout_toEndOf="@id/profile_picture"
        android:ellipsize="end"
        style="@style/Regular18"
        android:maxLines="1"
        android:textColor="@color/black_70"
        tools:text="Luke Skywalker"/>

</RelativeLayout>