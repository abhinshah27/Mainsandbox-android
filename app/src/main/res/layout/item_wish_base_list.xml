<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:paddingStart="@dimen/activity_margin_lg"
              android:paddingEnd="@dimen/activity_margin_lg"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
    android:background="@drawable/selector_background_wish_item_list">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:visibility="visible"
        android:duplicateParentState="true"/>

    <androidx.emoji.widget.EmojiAppCompatTextView
        android:id="@+id/action_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon"
        android:layout_centerVertical="true"
        style="@style/Regular16"
        android:gravity="start"
        android:textColor="@color/color_state_wish_item_list"
        tools:text="Your action here"
        android:duplicateParentState="true"
        />

</RelativeLayout>