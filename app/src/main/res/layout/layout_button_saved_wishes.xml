<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:paddingStart="@dimen/activity_margin_lg"
    android:paddingEnd="@dimen/activity_margin_lg"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/background_button_login"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/wish_icon_burger"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/activity_margin_lg"
        android:duplicateParentState="true"
        app:srcCompat="@drawable/ic_saved_wishes"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/SemiBold20"
        android:textColor="@color/state_list_login"
        android:duplicateParentState="true"
        android:text="@string/wishes_action_saved"/>

</LinearLayout>