<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- MEDIA BACKGROUNDS [START] -->

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/postImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <it.keybiz.lbsapp.corporate.widgets.PlayerViewNoController
        android:id="@+id/playerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:resize_mode="fit"
        app:use_controller="false"
        app:auto_show="false"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/waveAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_repeatCount="0"
        app:lottie_rawRes="@raw/lottie_wave"
        android:visibility="gone"/>

    <!-- MEDIA BACKGROUNDS [END] -->


    <!-- POST MASKS FOR MARGINS [START] -->

    <Space
        android:id="@+id/spaceToolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/spaceBottomBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <include
        android:id="@+id/maskUp"
        layout="@layout/post_mask_upper_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceToolbar"
        android:visibility="invisible"/>

    <include
        android:id="@+id/maskLow"
        layout="@layout/post_mask_lower_new"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/spaceBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/maskUp" />

    <!-- POST MASKS FOR MARGINS [END] -->


    <!-- OVERLAY ACTIONS [START] -->

    <include
        android:id="@+id/profilePicture"
        layout="@layout/custom_layout_profile_picture_shadow_tl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/selector_button_round"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/layer_cp_close" />

    <LinearLayout
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_cpost_send_shadow"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_cp_send_plane" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/activity_margin_lg"
            style="@style/Bold20"
            android:text="@string/action_send"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- OVERLAY ACTIONS [END] -->


    <!-- BOTTOM BAR [START] -->

    <include
        layout="@layout/custom_divider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/mediaActionsBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/mediaActionsBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_post_actions_bar_height"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/panelViewToAnimate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btnFitFill"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/mediaActionsBar"
        app:layout_constraintEnd_toStartOf="@+id/btnBackgroundColor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/mediaActionsBar"
        app:layout_constraintTop_toTopOf="@+id/mediaActionsBar"
        app:srcCompat="@drawable/selector_cpost_action_fit" />

    <ImageView
        android:id="@+id/btnBackgroundColor"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/mediaActionsBar"
        app:layout_constraintEnd_toStartOf="@+id/btnTextColor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnFitFill"
        app:layout_constraintTop_toTopOf="@+id/mediaActionsBar"
        app:srcCompat="@drawable/selector_cpost_action_color" />

    <ImageView
        android:id="@+id/btnTextColor"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/mediaActionsBar"
        app:layout_constraintEnd_toStartOf="@+id/btnTextSize"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBackgroundColor"
        app:layout_constraintTop_toTopOf="@+id/mediaActionsBar"
        app:srcCompat="@drawable/selector_cpost_action_text_color" />

    <ImageView
        android:id="@+id/btnTextSize"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/mediaActionsBar"
        app:layout_constraintEnd_toStartOf="@+id/btnTextAnchor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnTextColor"
        app:layout_constraintTop_toTopOf="@+id/mediaActionsBar"
        app:srcCompat="@drawable/selector_cpost_action_text_size" />

    <ImageView
        android:id="@+id/btnTextAnchor"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/mediaActionsBar"
        app:layout_constraintEnd_toEndOf="@+id/mediaActionsBar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnTextSize"
        app:layout_constraintTop_toTopOf="@+id/mediaActionsBar"
        app:srcCompat="@drawable/selector_cpost_action_text_anchor" />

    <!-- Add single panel layouts with height=0 -->

    <FrameLayout
        android:id="@+id/panelViewToAnimate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white_87"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <include
            android:id="@+id/panelFitFill"
            layout="@layout/cpost_preview_fit_fill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <include
            android:id="@+id/panelColor"
            layout="@layout/cpost_preview_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <include
            android:id="@+id/panelTextAnchor"
            layout="@layout/cpost_preview_text_anchor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <include
            android:id="@+id/panelTextSize"
            layout="@layout/cpost_preview_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <include
            android:id="@+id/panelTextColor"
            layout="@layout/cpost_preview_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- BOTTOM BAR [END] -->


    <include
        android:id="@+id/genericProgressIndicator"
        layout="@layout/custom_generic_progress_indicator_small_noconstr" />

</androidx.constraintlayout.widget.ConstraintLayout>