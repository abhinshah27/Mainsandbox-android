<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.timeline.interactions.PostOverlayActionActivity"
    android:background="@color/black_38">

    <RelativeLayout
        android:id="@+id/background_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/blurred_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_12"
        android:src="@drawable/background_transparent"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_button_round"
            android:clickable="true"
            android:onClick="onClick" android:focusable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_close"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <FrameLayout
                android:id="@+id/comment_btn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/background_interaction_comment"
                android:clickable="true"
                android:onClick="onClick" android:focusable="true"
                android:visibility="visible"/>

            <FrameLayout
                android:id="@+id/share_btn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:background="@drawable/background_interaction_share"
                android:clickable="true"
                android:onClick="onClick" android:focusable="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/section_hearts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/buttons_layout"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/swipe_icon_hearts"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_swipe_up"/>

            <TextView
                android:id="@+id/changing_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SemiBold20"
                android:gravity="center"
                android:text="@string/send_hearts"
                android:textAlignment="gravity"
                android:textColor="@color/white"/>

            <RatingBar
                android:id="@+id/rating_hearts"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="30dp"
                android:numStars="5"
                android:progressDrawable="@drawable/custom_rating_stars_transp"
                android:stepSize="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/section_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/swipe_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_swipe_up"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/text_comment_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                style="@style/SemiBold20"
                android:textAlignment="gravity"
                android:text="@string/swipe_up_to_send_comment"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:background="@color/white_87"
                android:layout_marginTop="30dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin">

                    <include layout="@layout/custom_layout_profile_picture"
                             android:id="@+id/author_s_avatar"
                             android:layout_width="30dp"
                             android:layout_height="30dp"/>
                </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@color/colorAccent"
                    android:layout_marginStart="-5dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginTop="15dp"/>

                <androidx.emoji.widget.EmojiAppCompatEditText
                    android:id="@+id/comment_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="40dp"
                    android:gravity="top"
                    style="@style/CommentEditTextStyleGen"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/section_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/swipe_icon_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_swipe_up"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/text_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                style="@style/SemiBold20"
                android:textAlignment="gravity"
                android:text="@string/swipe_up_to_share"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="150dp"
                android:background="@color/white_87"
                android:layout_marginTop="30dp">

                <RelativeLayout
                    android:id="@+id/super_container"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <LinearLayout
                        android:id="@+id/buttons_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <FrameLayout
                            android:id="@+id/searchButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:focusable="true"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/search_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                app:srcCompat="@drawable/ic_search"/>
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/clearButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/clear_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                app:srcCompat="@drawable/ic_close_black_24dp"/>
                        </FrameLayout>
                    </LinearLayout>

                    <!--<FrameLayout-->
                    <!--android:id="@+id/search_btn"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:paddingStart="@dimen/activity_horizontal_margin"-->
                    <!--android:paddingEnd="@dimen/activity_horizontal_margin"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_gravity="center_vertical|end"-->
                    <!--android:focusable="true"-->
                    <!--android:clickable="true"-->
                    <!--android:onClick="onClick"-->
                    <!--&gt;-->

                    <!--<ImageView-->
                    <!--android:layout_width="24dp"-->
                    <!--android:layout_height="24dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--app:srcCompat="@drawable/ic_search"/>-->
                    <!--</FrameLayout>-->

                    <RelativeLayout
                        android:id="@+id/share_search_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/buttons_container"
                        android:animateLayoutChanges="true">

                        <LinearLayout
                            android:id="@+id/search_field"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/close_search_btn"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                android:layout_marginStart="@dimen/activity_horizontal_margin"
                                android:focusable="true"
                                android:clickable="true"
                                android:onClick="onClick"
                                app:srcCompat="@drawable/ic_keyboard_backspace_black_24dp"/>

                            <EditText
                                android:id="@+id/share_search"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/CommentEditTextStyleGen"
                                android:imeOptions="actionSearch"
                                android:imeActionLabel="@string/action_search"
                                android:inputType="text"
                                android:maxLines="1"
                                android:hint="@string/search_here"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/share_text_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:orientation="horizontal"
                            android:layout_marginEnd="5dp"
                            android:visibility="visible"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                style="@style/Bold16"
                                android:text="@string/share_post_with" />

                            <TextView
                                android:id="@+id/shared_with"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                style="@style/Regular15"
                                android:ellipsize="marquee"
                                android:scrollHorizontally="true"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:textColor="@color/black_70"
                                tools:text="Inner Circle, John Henry"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/share_rec_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/confirmation_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/custom_layout_profile_picture"
                 android:id="@+id/confirmation_profile_pic"
                 android:layout_width="175dp"
                 android:layout_height="175dp"
                 android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/confirmation_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            style="@style/Regular26"
            android:text="@string/post_interaction_confirm_hearts"
            android:textColor="@color/white"
            android:textAlignment="center" />

        <RelativeLayout
            android:id="@+id/confirmation_hearts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/h_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_luiss_star_full_white"/>

            <ImageView
                android:id="@+id/h_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:layout_toEndOf="@id/h_1"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_luiss_star_full_white"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/h_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:layout_toEndOf="@id/h_2"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_luiss_star_full_white"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/h_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:layout_toEndOf="@id/h_3"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_luiss_star_full_white"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/h_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:layout_toEndOf="@id/h_4"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:srcCompat="@drawable/ic_luiss_star_full_white"
                android:visibility="visible"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/confirmation_big_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            tools:src="@drawable/ic_share"/>

    </LinearLayout>
</FrameLayout>
