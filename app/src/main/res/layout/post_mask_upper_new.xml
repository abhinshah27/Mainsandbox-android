<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/timeline_post_mask_upper"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="top"
              android:padding="@dimen/activity_margin"
              android:orientation="horizontal"
              android:alpha="1"
              tools:background="@color/black_26">

    <include layout="@layout/custom_layout_profile_picture_shadow_tl"
             android:id="@+id/profile_picture"/>

    <RelativeLayout
        android:id="@+id/hideable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:layout_alignParentEnd="true"
            android:gravity="end">

            <TextView
                android:id="@+id/time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BoldShadow16"
                tools:text="6h"
                android:textColor="@android:color/white"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/layer_more"
                android:focusable="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:layout_toStartOf="@id/more_options">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                style="@style/BoldShadow20"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/white"
                tools:text="Joanne Smith"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_privacy"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_public_post_white"/>

                <LinearLayout
                    android:id="@+id/hearts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/layer_star_white"/>

                    <TextView
                        android:id="@+id/count_hearts_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        style="@style/BoldShadow18"
                        tools:text="3,542"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/shared_via"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/layer_share_via"/>

                <TextView
                    android:id="@+id/shared_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/RegularShadow14"
                    android:textColor="@color/white"
                    tools:text="@string/shared_via" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>