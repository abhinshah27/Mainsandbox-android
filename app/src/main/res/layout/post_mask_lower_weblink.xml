<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/timeline_post_mask_lower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:alpha="1"
                tools:background="@color/black_26">

    <RelativeLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mask_interactions_section_height"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/button_hearts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_margin">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:srcCompat="@drawable/ic_heart_large_full"/>

            <TextView
                android:id="@+id/count_hearts_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                style="@style/Bold18"
                android:text="100"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_comments"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@id/button_hearts"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:srcCompat="@drawable/ic_comment"/>

            <TextView
                android:id="@+id/count_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                style="@style/Bold18"
                android:text="1,0"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_shares"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/button_comments"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:srcCompat="@drawable/ic_share"/>

            <TextView
                android:id="@+id/count_shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                style="@style/Bold18"
                android:text="10"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/button_pin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                app:srcCompat="@drawable/ic_pin"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/privacy_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_shares"
            android:layout_toStartOf="@id/button_pin"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_privacy"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/ic_privacy_public"/>

            <TextView
                android:id="@+id/text_privacy"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/SemiBold12"
                android:text="@string/label_privacy_public"
                android:textAllCaps="true"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tags_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_above="@id/bottom_section">

        <ImageView
            android:id="@+id/icon_tags"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_tag_mask"/>

        <TextView
            android:id="@+id/more_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_alignParentEnd="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="@style/Regular16"
            android:text="@string/view_tags"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/pics_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon_tags"
            android:layout_toStartOf="@id/more_tags">

            <include layout="@layout/custom_layout_profile_picture"
                     android:id="@+id/tag_1"
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:layout_marginStart="5dp"/>

            <include layout="@layout/custom_layout_profile_picture"
                     android:id="@+id/tag_2"
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:layout_marginStart="5dp"/>

            <include layout="@layout/custom_layout_profile_picture"
                     android:id="@+id/tag_3"
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:layout_marginStart="5dp"/>

            <include layout="@layout/custom_layout_profile_picture"
                     android:id="@+id/tag_4"
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:layout_marginStart="5dp"/>

            <include layout="@layout/custom_layout_profile_picture"
                     android:id="@+id/tag_5"
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:layout_marginStart="5dp"/>

            <ImageView
                android:id="@+id/tags_more"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/ic_more_white"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/caption_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/activity_margin"
        android:layout_above="@id/tags_layout"
        android:orientation="vertical">

        <androidx.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/weblink_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:ellipsize="end"
            style="@style/SemiBold15"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna "
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_web_link_white"/>

            <TextView
                android:id="@+id/weblink_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                style="@style/Regular16"
                tools:text="the guardian"
                android:textColor="@color/white"
                android:textAllCaps="true"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.emoji.widget.EmojiAppCompatTextView
        android:id="@+id/post_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        style="@style/Regular15"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna "
        android:textColor="@android:color/white" />
</RelativeLayout>