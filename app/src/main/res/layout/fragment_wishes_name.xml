<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    >


    <androidx.emoji.widget.EmojiAppCompatEditText
        android:id="@+id/wish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/Light28"
        android:textColor="@color/black_87"
        android:textColorHint="@color/black_38"
        android:inputType="textCapSentences"
        android:textCursorDrawable="@drawable/custom_cursor_drawable"
        android:maxLines="@integer/interest_detail_description_lines"
        android:hint="@string/wishes_name_hint"
        android:background="@null"/>


</RelativeLayout>