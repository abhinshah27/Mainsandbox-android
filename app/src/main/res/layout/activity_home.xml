<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".corporate.activities_and_fragments.activities_home.timeline.InteractionsViewerActivity"
    app:umanoShadowHeight="0dp"
    app:umanoFadeColor="@color/black_30"
    app:umanoInitialState="collapsed"
    app:umanoOverlay="true"
    app:umanoPanelHeight="0dp">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:application="it.keybiz.lbsapp.corporate.features.HomeActivity">

        <it.keybiz.lbsapp.corporate.widgets.HLViewPagerNoScroll
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <!--<include layout="@layout/hl_toolbar_transp_home_timeline"-->
                 <!--android:layout_width="match_parent"-->
                 <!--android:layout_height="?android:actionBarSize"-->
                 <!--android:fitsSystemWindows="true"-->
                 <!--android:visibility="visible"/>-->

        <include layout="@layout/luiss_bottom_bar"
                 android:id="@+id/bottom_bar"
                 android:layout_width="match_parent"
                 android:layout_height="48dp"
                 android:layout_gravity="bottom"
                 android:visibility="visible"/>

        <include layout="@layout/custom_generic_progress_indicator"/>

    </FrameLayout>

    <include layout="@layout/bottom_sheet_post_actions"
             android:id="@+id/post_bottom_sheet"/>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>