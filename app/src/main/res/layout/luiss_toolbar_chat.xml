<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    app:contentInsetStart="0dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/activity_margin_md"
            android:layout_marginStart="@dimen/activity_margin_md"
            android:orientation="horizontal"
            android:background="@drawable/selector_button_round">

            <ImageView
                android:id="@+id/backArrowIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_back_accent" />

            <TextView
                android:id="@+id/toReadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                style="@style/SemiBold18"
                tools:text="12"
                android:textColor="@color/colorAccent"
                android:visibility="visible"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/logo_title"
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_height"
            android:layout_centerInParent="true"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_luiss_logo"
            tools:background="@color/black_12"
            android:visibility="visible"/>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>