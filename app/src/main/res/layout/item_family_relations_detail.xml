<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:orientation="vertical"
    tools:background="@color/white">

    <TextView
        android:id="@+id/relation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin_lg"
        style="@style/Regular16"
        android:textColor="@color/black_54"
        tools:text="Mum"
        android:textAllCaps="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/activity_margin"
        android:paddingStart="@dimen/activity_margin_lg"
        android:paddingEnd="@dimen/activity_margin_lg">


        <FrameLayout
            android:id="@+id/picture_layout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true">

            <include layout="@layout/custom_layout_profile_picture"
                     android:id="@+id/profile_picture"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent" />

            <View
                android:id="@+id/picture_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_circle_white_alpha_light"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_pending"
                android:layout_gravity="center_vertical|end"
                style="@style/Regular16"
                android:textColor="@color/colorAccent" />

            <FrameLayout
                android:id="@+id/remove_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center_vertical|end">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_remove_black_svg"/>

            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_toEndOf="@id/picture_layout"
            android:layout_toStartOf="@id/actions"
            style="@style/Regular16"
            tools:text="Joanne Smith"
            android:textColor="@color/state_list_family_rel_profile"
            tools:enabled="true"/>

    </RelativeLayout>

    <include layout="@layout/custom_divider"/>

</LinearLayout>