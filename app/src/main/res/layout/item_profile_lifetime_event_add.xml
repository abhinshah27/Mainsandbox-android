<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/lifetime_event_add"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:animateLayoutChanges="true">

    <FrameLayout
        android:id="@+id/btn_delete_add"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="-10dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_close_black_54"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/btn_delete_add"
        android:weightSum="1">

        <TextView
            android:id="@+id/lt_event_date_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".24"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            style="@style/Regular14"
            android:text="@string/item_profile_event_add_date"
            android:textColor="@color/black_54"
            android:textAllCaps="true" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".76"
            android:layout_gravity="center_vertical"
            >

            <androidx.emoji.widget.EmojiAppCompatTextView
                android:id="@+id/lt_event_description_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/Regular15"
                android:text="@string/item_profile_event_descr_edit_hint"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:visibility="visible"/>

            <androidx.emoji.widget.EmojiAppCompatEditText
                android:id="@+id/lt_event_description_edit_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/Regular15"
                tools:text="Gave birth to Joseph Robbins"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:hint="@string/item_profile_event_descr_edit_hint"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textCursorDrawable="@drawable/custom_cursor_drawable"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>