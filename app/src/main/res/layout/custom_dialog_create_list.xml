<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/dialog_flag_title"
        style="@style/DialogTitle"
        android:text="@string/create_list_title" />

    <androidx.emoji.widget.EmojiAppCompatEditText
        android:id="@+id/create_list_edittext"
        style="@style/DialogMessage.EditText"
        android:hint="@string/dialog_create_list_hint" />

    <include layout="@layout/generic_dialog_section_buttons"/>

</LinearLayout>