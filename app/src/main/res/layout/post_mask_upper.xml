<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/timeline_post_mask_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:alpha="1"
                tools:background="@color/black_26">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/activity_margin">

        <include layout="@layout/custom_layout_profile_picture"
                 android:id="@+id/profile_picture"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_marginStart="5dp"
                 android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/name_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/profile_picture">

            <ImageView
                android:id="@+id/more_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/ic_more_white"
                android:focusable="true"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/more_options"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                style="@style/Bold20"
                tools:text="Joanne Smith"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:maxLines="1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stamp_hearts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/name_dots"
            android:layout_toEndOf="@id/profile_picture">

            <LinearLayout
                android:id="@+id/hearts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/count_hearts_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    style="@style/Bold18"
                    tools:text="3,542"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/ic_heart_large_full"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/hearts"
                android:layout_marginEnd="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Bold18"
                    tools:text="6h"
                    android:textColor="@android:color/white"/>


                <!-- TODO   PUT HERE LOCATION -->
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Regular18"
                    tools:text=", Brooklyn New York"
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:visibility="gone"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/shared_via"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/stamp_hearts"
            android:layout_toEndOf="@id/profile_picture">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_share_via"/>

            <TextView
                android:id="@+id/shared_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/Regular14"
                android:textColor="@color/white"
                tools:text="@string/shared_via" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>