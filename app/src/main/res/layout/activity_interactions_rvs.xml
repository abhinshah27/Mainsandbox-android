<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".features.timeline.interactions.InteractionsViewerActivity"
    app:umanoFadeColor="@color/black_30"
    app:umanoInitialState="collapsed"
    app:umanoOverlay="true"
    app:umanoPanelHeight="0dp"
    app:umanoScrollableView="@+id/interactions_rec_view">

    <FrameLayout
        android:id="@+id/root_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:onClick="onClick"
        tools:context=".corporate.activities_and_fragments.activities_home.timeline.InteractionsViewerActivity"
        android:background="@color/black_30"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/main_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:alpha="1"
            tools:background="@color/black_26"
            tools:context=".corporate.activities_and_fragments.activities_home.timeline.InteractionsViewerActivity">

            <RelativeLayout
                android:id="@+id/bottom_section"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mask_interactions_section_height"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:id="@+id/interactions_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_toStartOf="@id/button_pin"
                    android:weightSum="1"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:id="@+id/button_hearts"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".33333333333"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClick">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/icon_hearts"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/transition_stars"/>

                            <TextView
                                android:id="@+id/count_hearts_post"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                style="@style/Bold18"
                                android:text="1,000"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <!-- FIRST TRIANGLE -->
                        <ImageView
                            android:id="@+id/triangle_hearts"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="gone"
                            android:layout_gravity="end|center_vertical"
                            android:src="@drawable/shape_triangle_alpha"
                            android:rotation="180"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button_comments"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".33333333333"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClick">

                        <LinearLayout
                            android:id="@+id/button_comments_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/icon_comments"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:srcCompat="@drawable/transition_comments"/>

                            <TextView
                                android:id="@+id/count_comments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                style="@style/Bold18"
                                tools:text="1,000"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <!-- SECOND TRIANGLE -->
                        <ImageView
                            android:id="@+id/triangle_comments"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="gone"
                            android:layout_gravity="end|center_vertical"
                            android:layout_alignStart="@id/button_comments_layout"
                            android:src="@drawable/shape_triangle_alpha"
                            android:rotation="180"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button_shares"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".33333333333"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClick">

                        <LinearLayout
                            android:id="@+id/button_shares_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/icon_shares"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:srcCompat="@drawable/transition_shares"/>

                            <TextView
                                android:id="@+id/count_shares"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                style="@style/Bold18"
                                tools:text="1,000"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <!-- THIRD TRIANGLE -->
                        <ImageView
                            android:id="@+id/triangle_shares"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignStart="@id/button_shares_layout"
                            android:visibility="gone"
                            android:src="@drawable/shape_triangle_alpha"
                            android:rotation="180"/>
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/button_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClick">

                    <ImageView
                        android:id="@+id/icon_pin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end|center_vertical"
                        app:srcCompat="@drawable/transition_pin"/>

                </FrameLayout>

                <!-- FOURTH TRIANGLE -->
                <ImageView
                    android:id="@+id/triangle_lists"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/button_pin"
                    android:layout_marginStart="19dp"
                    android:visibility="visible"
                    android:src="@drawable/shape_triangle_alpha"
                    android:rotation="180"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/interactions_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bottom_section"
                android:orientation="vertical"
                android:background="@drawable/shape_rectangle_rounded_white_md_interactions"
                android:animateLayoutChanges="true">

                <LinearLayout
                    android:id="@+id/comment_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_marginBottom="@dimen/activity_margin"
                        android:layout_marginStart="@dimen/activity_margin_md"
                        android:layout_marginEnd="@dimen/activity_margin_md"
                        android:background="@drawable/shape_rectangle_rounded_white_w_border"
                        style="@style/Regular16"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:text="@string/hint_comment_ext"
                        android:textColor="@color/black_38" />

                    <include layout="@layout/custom_divider"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/interactions_rec_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    style="@style/ScrollbarStyle"/>
                android:layout_marginStart="@dimen/activity_margin_md"
                android:layout_marginEnd="@dimen/activity_margin_md"

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lists_rv"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_above="@id/bottom_section"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_rectangle_rounded_white_md_interactions">
                android:layout_marginEnd="@dimen/activity_horizontal_margin"

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    style="@style/ScrollbarStyle">

                    <LinearLayout
                        android:id="@+id/lists_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"/>
                </ScrollView>

                <TextView
                    android:id="@+id/create_new_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:focusable="true"
                    style="@style/Regular16"
                    android:text="@string/create_new_folder"
                    android:textColor="@color/black_54" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <include layout="@layout/bottom_sheet_comment_actions"
        android:id="@+id/comment_bottom_sheet"
        />

</com.sothree.slidinguppanel.SlidingUpPanelLayout>