<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".corporate.activities_and_fragments.activities_home.wishes.WishesActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/custom_gallery_rv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        />

    <FrameLayout
        android:id="@+id/take_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/custom_gallery_rv">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/divider_on_white"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_choose_cover_action"
            />

    </FrameLayout>

</RelativeLayout>