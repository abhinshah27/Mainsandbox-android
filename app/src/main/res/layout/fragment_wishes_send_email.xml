<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginStart="@dimen/activity_margin"
                    android:layout_marginEnd="@dimen/activity_margin">

        <EditText
            android:id="@+id/email_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_rounded_4_gray"
            android:hint="@string/action_to"
            android:padding="12dp"
            style="@style/Regular16"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/black_38"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_marginTop="10dp"
            android:visibility="visible"/>

        <androidx.emoji.widget.EmojiAppCompatEditText
            android:id="@+id/email_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_to"
            android:background="@drawable/background_rounded_4_gray"
            android:inputType="textCapSentences"
            android:hint="@string/action_email_subject"
            android:padding="12dp"
            style="@style/Regular16"
            android:textColorHint="@color/black_38"
            android:layout_marginBottom="@dimen/activity_margin"/>

        <LinearLayout
            android:id="@+id/message_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_subject"
            android:orientation="vertical"
            android:background="@drawable/background_rounded_4_gray"
            >

            <androidx.emoji.widget.EmojiAppCompatEditText
                android:id="@+id/email_message"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:hint="@string/action_email_message"
                android:gravity="top"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="12dp"
                style="@style/Regular16"
                android:textColorHint="@color/black_38"
                android:background="@null"/>

            <LinearLayout
                android:id="@+id/attachment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <GridLayout
                    android:id="@+id/send_email_attached_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:useDefaultMargins="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_gravity="start|center_vertical"
                    android:animateLayoutChanges="true"/>

                <LinearLayout
                    android:id="@+id/send_email_attach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_gravity="start|center_vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="@dimen/activity_margin"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_add_attachment_orange" />

                    <TextView
                        android:id="@+id/add_attachment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_rounded_4_gray"
                        android:padding="2dp"
                        style="@style/Regular16"
                        android:textColor="@color/colorAccent"
                        android:text="@string/action_email_attach" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/send_email_add_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_box"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_accent_checkbox"
                android:duplicateParentState="true"/>

            <TextView
                android:id="@+id/add_profile_photo_to_the_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                style="@style/Regular16"
                android:text="@string/action_email_add_picture"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorAccent" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>