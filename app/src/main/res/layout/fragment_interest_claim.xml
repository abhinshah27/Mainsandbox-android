<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_file_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".features.profile.ProfileActivity"
    app:umanoShadowHeight="0dp"
    app:umanoFadeColor="@color/black_30"
    app:umanoInitialState="collapsed"
    app:umanoOverlay="true"
    app:umanoPanelHeight="0dp"
    app:umanoScrollableView="@+id/claim_sv">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <include layout="@layout/luiss_toolbar_btp"
                 android:id="@+id/toolbar"/>

        <ScrollView
            android:id="@+id/claim_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_phone_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/activity_margin"
                    android:layout_marginEnd="@dimen/activity_margin"
                    android:visibility="visible"
                    android:alpha="1">

                    <TextView
                        android:id="@+id/claim_title_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        style="@style/Regular16"
                        android:text="@string/interest_claim_title_body_phone"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/claim_body_1_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        style="@style/Regular14"
                        android:text="@string/interest_claim_body_1_phone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_marginBottom="@dimen/activity_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:baselineAligned="false">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:layout_marginEnd="8dp"
                                android:orientation="vertical">

                                <com.hbb20.CountryCodePicker
                                    android:id="@+id/ccp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:gravity="start|center_vertical"
                                    app:ccp_countryPreference="US"
                                    app:ccp_defaultNameCode="US"
                                    app:ccp_showFlag="true"
                                    app:ccp_showFullName="false"
                                    app:ccp_showNameCode="false"
                                    app:ccp_textGravity="LEFT"
                                    app:ccp_textSize="16sp"
                                    app:ccpDialog_textColor="@color/black_87"
                                    app:ccpDialog_allowSearch="true"
                                    app:ccpDialog_keyboardAutoPopup="true"
                                    app:ccpDialog_backgroundColor="@color/white"
                                    app:ccpDialog_showCloseIcon="true"
                                    app:ccp_countryAutoDetectionPref="LOCALE_SIM_NETWORK"/>

                                <include layout="@layout/custom_divider"
                                         android:layout_width="match_parent"
                                         android:layout_height="1dp"
                                         android:layout_alignParentBottom="true"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight=".65"
                                android:gravity="center_vertical">

                                <EditText
                                    android:id="@+id/phone_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_centerVertical="true"
                                    style="@style/Regular16"
                                    android:hint="@string/prompt_mobile"
                                    tools:text="blablablablabl"
                                    tools:drawableEnd="@drawable/ic_tick_green_small"
                                    android:drawablePadding="5dp"
                                    android:background="@null"
                                    android:textCursorDrawable="@drawable/custom_cursor_drawable"
                                    android:inputType="phone"
                                    android:maxLines="1"/>

                                <include layout="@layout/custom_divider"
                                         android:layout_width="match_parent"
                                         android:layout_height="1dp"
                                         android:layout_alignParentBottom="true"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/activity_margin">

                            <ImageView
                                android:id="@+id/tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                app:srcCompat="@drawable/ic_tick_green_small"/>

                            <Spinner
                                android:id="@+id/languages_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@id/tick"
                                tools:text="August 25th, 1988"
                                android:background="@null"
                                tools:listitem="@layout/claim_lang_simple_spinner_item"/>

                            <include layout="@layout/custom_divider"
                                     android:layout_width="match_parent"
                                     android:layout_height="1dp"
                                     android:layout_alignParentBottom="true"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Regular12"
                        android:text="@string/interest_claim_body_clause_phone" />

                    <Button
                        android:id="@+id/claim_page_btn_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_login"
                        android:layout_marginTop="@dimen/activity_margin_lg"
                        style="@style/Bold16"
                        android:textColor="@color/state_list_login"
                        android:text="@string/interest_claim_phone" />

                    <LinearLayout
                        android:id="@+id/claim_documents_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Bold16"
                            android:text="@string/interest_claim_altern" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            style="@style/Bold16"
                            android:text="@string/interest_claim_documents"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/activity_margin"
                    android:layout_marginEnd="@dimen/activity_margin"
                    android:visibility="gone"
                    android:alpha="0">

                    <TextView
                        android:id="@+id/claim_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        style="@style/Regular16"
                        android:text="@string/interest_claim_title_body"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/claim_body_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        style="@style/Regular14"
                        android:text="@string/interest_claim_body_1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:srcCompat="@drawable/ic_claim_tick"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:layout_marginStart="@dimen/activity_margin"
                                style="@style/Regular14"
                                android:text="@string/item_claim_utility" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:srcCompat="@drawable/ic_claim_tick"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:layout_marginStart="@dimen/activity_margin"
                                style="@style/Regular14"
                                android:text="@string/item_claim_license" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:srcCompat="@drawable/ic_claim_tick"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:layout_marginStart="@dimen/activity_margin"
                                style="@style/Regular14"
                                android:text="@string/item_claim_tax" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:srcCompat="@drawable/ic_claim_tick"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:layout_marginStart="@dimen/activity_margin"
                                style="@style/Regular14"
                                android:text="@string/item_claim_formation"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:srcCompat="@drawable/ic_claim_tick"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:layout_marginStart="@dimen/activity_margin"
                                style="@style/Regular14"
                                android:text="@string/item_claim_incorporation" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Regular12"
                        android:text="@string/interest_claim_body_clause" />

                    <Button
                        android:id="@+id/claim_page_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_login"
                        style="@style/Bold16"
                        android:textColor="@color/state_list_login"
                        android:layout_marginTop="@dimen/activity_margin_lg"
                        android:text="@string/interest_claim_upload"/>

                    <LinearLayout
                        android:id="@+id/claim_phone_call_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Bold16"
                            android:text="@string/interest_claim_altern"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            style="@style/Bold16"
                            android:text="@string/interest_claim_phone_call"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/custom_claim_bottom_sheet"
             android:id="@+id/claim_bottom_sheet"/>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>