<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/bottom_bar_height">

    <include layout="@layout/luiss_toolbar_simple_back"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/activity_margin"
        >

        <FrameLayout
            android:id="@+id/tab_notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_weight=".5">

            <TextView
                android:id="@+id/tab_notification_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                style="@style/Regular18"
                android:text="@string/notifications_title"
                android:textColor="@color/state_list_custom_tab"
                android:background="@drawable/background_custom_tab" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tab_requests"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_weight=".5"
            android:visibility="visible">

            <TextView
                android:id="@+id/tab_requests_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                style="@style/Regular18"
                android:text="@string/requests_title"
                android:textColor="@color/state_list_custom_tab"
                android:background="@drawable/background_custom_tab"/>
        </FrameLayout>
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/inner_circle_pages_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ScrollbarStyle"
                android:visibility="visible"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_requests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                style="@style/ScrollbarStyle"/>

            <TextView
                android:id="@+id/no_notifications"
                style="@style/NoResultStyle"
                android:text="@string/no_people_in_ic"
                />
        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>