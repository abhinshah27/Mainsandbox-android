<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_content"
    android:background="@color/black"
    android:fitsSystemWindows="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     xmlns:app="http://schemas.android.com/apk/res-auto"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="@color/black"
                     android:animateLayoutChanges="true"
                     android:focusable="true"
                     android:focusableInTouchMode="true">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:resize_mode="fill"
                app:use_controller="true"
                app:auto_show="true"
                app:hide_on_touch="true"
                android:background="@color/black"/>

            <FrameLayout
                android:id="@+id/video_view_thumbnail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/divider_on_white">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_placeholder_video"/>

                <ImageView
                    android:id="@+id/video_view_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@color/black"/>

            </FrameLayout>

            <ImageView
                android:id="@+id/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_10"/>

            <LinearLayout
                android:id="@+id/play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/ic_mic_rec_play"
                    />

                <ImageView
                    android:id="@+id/icon_placeholder"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_placeholder_video_accent"
                    android:visibility="gone"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/pause_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:padding="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/pause_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_mic_rec_pause" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/progress_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:animateLayoutChanges="true"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:indeterminate="true"/>

                <TextView
                    android:id="@+id/progress_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress"
                    android:layout_marginTop="10dp"
                    style="@style/Regular14"
                    android:text="@string/buffering_video"
                    android:textColor="@color/colorAccent"
                    android:visibility="visible"/>
            </RelativeLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_margin"
            android:layout_gravity="end">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_close"
                android:background="@drawable/selector_button_round"
                android:duplicateParentState="true"
                />

        </FrameLayout>
    </FrameLayout>
</RelativeLayout>