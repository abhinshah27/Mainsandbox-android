<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="@dimen/diary_card_width"
                                   android:layout_height="@dimen/diary_card_height"
                                   app:cardCornerRadius="@dimen/diary_card_corners"
                                   app:cardElevation="1dp"
                                   app:cardUseCompatPadding="false"
                                   app:cardPreventCornerOverlap="false">

    <View
        android:id="@+id/post_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_profile_preview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center"
        style="@style/Bold14"
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/view_all_posts"
        android:textColor="@color/white"/>

</androidx.cardview.widget.CardView>