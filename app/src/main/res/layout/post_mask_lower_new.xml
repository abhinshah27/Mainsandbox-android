<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/timeline_post_mask_lower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:alpha="1"
                tools:background="@color/black_26">

    <LinearLayout
        android:id="@+id/anchor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/hideable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/tags_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/icon_tags"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/layer_mask_tag"/>

                <TextView
                    android:id="@+id/more_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    style="@style/RegularShadow16"
                    android:text="@string/view_tags"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:id="@+id/pics_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/icon_tags"
                    android:layout_toStartOf="@id/more_tags">

                    <include layout="@layout/custom_layout_profile_picture_shadow_tl_tags"
                             android:id="@+id/tag_1"
                             android:layout_width="25dp"
                             android:layout_height="25dp"
                             android:layout_marginStart="5dp"/>

                    <include layout="@layout/custom_layout_profile_picture_shadow_tl_tags"
                             android:id="@+id/tag_2"
                             android:layout_width="25dp"
                             android:layout_height="25dp"
                             android:layout_marginStart="5dp"/>

                    <include layout="@layout/custom_layout_profile_picture_shadow_tl_tags"
                             android:id="@+id/tag_3"
                             android:layout_width="25dp"
                             android:layout_height="25dp"
                             android:layout_marginStart="5dp"/>

                    <include layout="@layout/custom_layout_profile_picture_shadow_tl_tags"
                             android:id="@+id/tag_4"
                             android:layout_width="25dp"
                             android:layout_height="25dp"
                             android:layout_marginStart="5dp"/>

                    <include layout="@layout/custom_layout_profile_picture_shadow_tl_tags"
                             android:id="@+id/tag_5"
                             android:layout_width="25dp"
                             android:layout_height="25dp"
                             android:layout_marginStart="5dp"/>

                    <ImageView
                        android:id="@+id/tags_more"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginStart="5dp"
                        app:srcCompat="@drawable/layer_more"
                        android:visibility="gone"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/initiative_label_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/balloons_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/layer_initiatives"/>

                <TextView
                    android:id="@+id/initiative_label_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/balloons_icon"
                    android:layout_centerVertical="true"
                    style="@style/RegularShadow16"
                    android:textColor="@color/colorAccent"
                    android:text="@string/label_initiative_support"
                    android:includeFontPadding="false"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_section"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mask_interactions_section_height">

                <FrameLayout
                    android:id="@+id/button_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/selector_button_round"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:id="@+id/pin_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end|center_vertical"
                        app:srcCompat="@drawable/selector_mask_pin"/>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/interactions_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/button_pin"
                    android:weightSum="1"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/button_hearts"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".33333333333"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/selector_mask_stars"
                            android:duplicateParentState="true"/>

                        <TextView
                            android:id="@+id/count_hearts_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            tools:text="100"
                            style="@style/BoldShadow18"
                            android:textColor="@color/white"
                            android:duplicateParentState="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_comments"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".33333333333"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/selector_mask_comments"
                            android:duplicateParentState="true"/>

                        <TextView
                            android:id="@+id/count_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            tools:text="1,0"
                            style="@style/BoldShadow18"
                            android:textColor="@color/white"
                            android:duplicateParentState="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_shares"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".33333333333"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/selector_mask_shares"
                            android:duplicateParentState="true"/>

                        <TextView
                            android:id="@+id/count_shares"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            style="@style/BoldShadow18"
                            tools:text="10"
                            android:textColor="@color/white"
                            android:duplicateParentState="true"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!--<LinearLayout-->
        <!--android:id="@+id/caption_section"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginStart="@dimen/activity_margin"-->
        <!--android:layout_marginEnd="@dimen/activity_margin"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:layout_above="@id/anchor"-->
        <!--android:weightSum="1"-->
        <!--tools:background="@color/black_26">-->

    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:paddingTop="@dimen/activity_margin"
        android:paddingStart="@dimen/activity_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:layout_above="@id/anchor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_more_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/activity_margin"
            android:paddingBottom="@dimen/activity_margin"
            style="@style/RegularShadow16"
            android:text="@string/view_more"
            android:textColor="@color/white"
            android:visibility="visible"/>

        <it.keybiz.lbsapp.corporate.widgets.AutoEllipsizingTextView
            android:id="@+id/post_caption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/view_more_text"
            style="@style/RegularShadow25"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna Sed ut perspiciatis unde omnis iste natus ddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddgggg"
            android:textColor="@android:color/white"/>

    </RelativeLayout>
    <!--</LinearLayout>-->
</RelativeLayout>