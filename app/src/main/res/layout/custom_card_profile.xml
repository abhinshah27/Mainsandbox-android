<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lower_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:minHeight="110dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_margin_lg"
            card_view:layout_constraintBottom_toBottomOf="parent">

            <include
                android:id="@+id/name_hearts_layout"
                layout="@layout/name_and_hearts_section" />

            <!-- INFO: 2/11/19    section HIDDEN for Luiss -->
            <LinearLayout
                android:id="@+id/layout_hideable_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        card_view:srcCompat="@drawable/ic_given_hearts_black" />

                    <TextView
                        android:id="@+id/count_heart_given"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="-2dp"
                        style="@style/Regular16"
                        tools:text="3564 given" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        card_view:srcCompat="@drawable/ic_receive_hearts_black" />

                    <TextView
                        android:id="@+id/count_heart_received"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="-2dp"
                        style="@style/Regular16"
                        tools:text="3564 received" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/wall_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_rounded_2_top"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toTopOf="@+id/lower_section"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/profile_picture"
            layout="@layout/custom_layout_profile_picture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            card_view:layout_constraintBottom_toBottomOf="@+id/wall_image"
            card_view:layout_constraintEnd_toEndOf="@+id/wall_image"
            card_view:layout_constraintHeight_percent=".3"
            card_view:layout_constraintStart_toStartOf="@+id/wall_image"
            card_view:layout_constraintTop_toTopOf="@+id/wall_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>