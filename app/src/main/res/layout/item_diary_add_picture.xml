<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="@dimen/diary_card_width"
                                   android:layout_height="@dimen/diary_card_height"
                                   app:cardCornerRadius="@dimen/diary_card_corners"
                                   app:cardElevation="1dp"
                                   app:cardUseCompatPadding="false"
                                   app:cardBackgroundColor="@color/divider_on_white"
                                   app:cardPreventCornerOverlap="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        style="@style/Bold14"
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/action_tap"
        android:textColor="@color/black_70"/>

</androidx.cardview.widget.CardView>