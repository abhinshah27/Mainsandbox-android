<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/layout_checkbox"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center_horizontal"
              android:paddingStart="@dimen/activity_margin_lg"
              android:paddingEnd="@dimen/activity_margin_lg"
              android:paddingBottom="10dp"
              android:paddingTop="10dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Regular18"
        android:textColor="@color/color_state_generic_checkbox_light"
        android:duplicateParentState="true"
        android:layout_gravity="center_vertical"
        tools:text="Male" />

    <View
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:duplicateParentState="true"
        android:layout_marginStart="24dp"
        android:background="@drawable/selector_accent_checkbox"/>

</LinearLayout>