<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:maxHeight="95dp"
             android:maxWidth="95dp"
             app:layout_columnWeight="1"
             app:layout_gravity="fill_horizontal">

    <it.keybiz.lbsapp.corporate.widgets.InterestTileImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_globalsearch_interest"/>

    <TextView
        android:id="@+id/interest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/SemiBold12"
        android:textAlignment="center"
        android:text="@string/view_all"
        android:textColor="@color/white"
        android:maxLines="3"
        android:ellipsize="end"/>

</FrameLayout>