<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:background="@drawable/selector_background_settings_item"
              android:weightSum="1"
              android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:layout_marginStart="@dimen/activity_margin_lg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            style="@style/Regular18"
            android:gravity="start"
            tools:text="Your action here"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Regular12"
            android:gravity="start"
            tools:text="@string/settings_security_lct_2step_mess"
            android:duplicateParentState="true"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/switch_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:layout_gravity="center_vertical">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/item_switch"
            style="@style/SwitchCompatStyleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

    </FrameLayout>
</LinearLayout>