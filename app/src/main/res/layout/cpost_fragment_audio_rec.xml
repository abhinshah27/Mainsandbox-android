<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="20dp"
    android:animateLayoutChanges="true">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:countDown="false"
        style="@style/Regular14"
        android:textColor="@color/white"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:id="@+id/lower_section"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/btn_main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_rec"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/buttons_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            >

            <View
                android:id="@+id/btn_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                android:background="@drawable/selector_rec_delete"/>

            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_mic_rec_play"/>

            <ImageView
                android:id="@+id/btn_confirm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:visibility="visible"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_mic_rec_confirm"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/record_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SemiBold18"
            android:text="@string/record_instruction"
            android:textColor="@color/colorAccent"
            android:layout_above="@id/btn_main"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:visibility="gone"/>

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_autoPlay="false" />

</RelativeLayout>