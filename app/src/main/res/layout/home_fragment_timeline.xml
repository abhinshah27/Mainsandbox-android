<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".corporate.activities_and_fragments.activities_home.HomeActivity"
    app:umanoFadeColor="@color/black_30"
    app:umanoInitialState="collapsed"
    app:umanoOverlay="true"
    app:umanoPanelHeight="0dp">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider_on_white">

        <!-- TODO - COMMENT IF NECESSARY -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:name="it.keybiz.lbsapp.corporate.activities_home.TimelineFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_post_picture"
                tools:context=".corporate.activities_and_fragments.activities_home.HomeActivity"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <include layout="@layout/luiss_toolbar_home_timeline"
                 android:id="@+id/toolbar"
                 android:layout_width="match_parent"
                 android:layout_height="?android:actionBarSize"
                 android:fitsSystemWindows="true"
                 android:visibility="visible"/>

        <include layout="@layout/luiss_toolbar_simple_back"
                 android:id="@+id/toolbar_diary_single"
                 android:layout_width="match_parent"
                 android:layout_height="?android:actionBarSize"
                 android:fitsSystemWindows="true"
                 android:visibility="gone"/>


        <include layout="@layout/custom_toast_rt_new_post"/>


        <include layout="@layout/custom_layout_timeline_filter"
                 android:id="@+id/tl_filter"/>

    </FrameLayout>

    <include layout="@layout/bottom_sheet_post_actions"
             android:id="@+id/post_bottom_sheet"/>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>