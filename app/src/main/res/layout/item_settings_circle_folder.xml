<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/selector_background_settings_item">

    <LinearLayout
        android:id="@+id/buttons_section"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true">

        <FrameLayout
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/icon_edit"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_edit_gray"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="@dimen/activity_margin_lg">

            <ImageView
                android:id="@+id/icon_remove"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_trash_outline_white_24"/>
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/circle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin_lg"
        android:layout_toStartOf="@id/buttons_section"
        android:layout_centerVertical="true"
        android:gravity="start"
        android:ellipsize="end"
        android:maxLines="1"
        style="@style/Regular18"
        tools:text="Your action here"
        android:duplicateParentState="true" />

</RelativeLayout>