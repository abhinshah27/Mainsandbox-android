<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/activity_margin_lg"
        android:paddingEnd="@dimen/activity_margin_lg"
        android:layout_marginBottom="@dimen/activity_margin_lg"
        style="@style/SemiBold18"
        android:textColor="@color/colorAccent"
        android:text="@string/wish_preview_info_txt"
        android:textAlignment="center"
        />

    <include layout="@layout/cwish_preview_card"
             android:id="@+id/wish_preview_card"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_above="@id/info_text"
             android:layout_marginStart="@dimen/activity_margin_lg"
             android:layout_marginEnd="@dimen/activity_margin_lg"
             android:layout_marginBottom="@dimen/activity_margin_lg"/>

</RelativeLayout>