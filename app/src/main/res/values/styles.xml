<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- dialog styling -->
        <item name="md_medium_font">open_sans.ttf</item>
        <item name="md_regular_font">open_sans_semibold.ttf</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ViewersTheme" parent="AppTheme"/>


    <style name="SplashStyle">
        <item name="android:background">@color/hl_background_splash</item>
    </style>

    <style name="GenericActivityStyle">
        <item name="android:background">@color/hl_background_activity</item>
    </style>

    <style name="TransparentInteractionTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TransparentPostSelectionTheme" parent="TransparentInteractionTheme">
        <item name="android:windowBackground">@color/white_95</item>
    </style>


    <style name="LoginButtonStyle" parent="Bold18">
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:text">@string/action_login</item>
        <item name="android:textColor">@color/state_list_login</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/background_button_login</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="LoginButtonStyleInverted" parent="LoginButtonStyle">
        <item name="android:textColor">@color/state_list_login_inverted</item>
        <item name="android:background">@drawable/background_button_login_inverted</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="LoginEditTextStyleGen" parent="Regular18">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor_drawable</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HcodeEditTextStyle" parent="Regular40">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_weight">.2</item>
        <item name="android:background">@drawable/shape_rectangle_rounded_gray</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor_drawable</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="CommentEditTextStyleGen" parent="Regular16">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor_drawable</item>
        <item name="android:imeOptions">actionUnspecified</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:hint">@string/hint_comment</item>
        <!--<item name="android:fontFamily">@ffam_open_sanssans</item>-->
    </style>

    <style name="ScrollbarStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/custom_scrollbar_track</item>
        <item name="android:scrollbarSize">6dp</item>
        <item name="android:scrollbarFadeDuration">700</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ScrollbarStyleHor">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/custom_scrollbar_thumb</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/custom_scrollbar_track</item>
        <item name="android:scrollbarSize">6dp</item>
        <item name="android:scrollbarFadeDuration">700</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
        <item name="android:paddingBottom">@dimen/activity_margin_lg</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ScrollbarStyleNoPadding" parent="ScrollbarStyle">
        <item name="android:paddingRight">0dp</item>
    </style>


    <style name="SwitchCompatStyle" >
        <item name="track">@drawable/custom_switch_track</item>
        <item name="android:thumb">@drawable/custom_switch_thumb</item>
    </style>

    <!-- Scales original switch and gives negative margin to fit most cases -->
    <style name="SwitchCompatStyleSmall" parent="SwitchCompatStyle">
        <item name="android:scaleX">.17</item>
        <item name="android:scaleY">.17</item>
        <item name="android:layout_marginTop">-50dp</item>
        <item name="android:layout_marginBottom">-50dp</item>
        <item name="android:layout_marginStart">-98dp</item>
        <item name="android:layout_marginEnd">-98dp</item>
    </style>

    <!-- Scales original switch and gives negative margin to fit most cases -->
    <style name="SwitchCompatStyleMedium" parent="SwitchCompatStyle">
        <item name="android:scaleX">.3</item>
        <item name="android:scaleY">.3</item>
        <item name="android:layout_marginTop">-40dp</item>
        <item name="android:layout_marginBottom">-40dp</item>
        <item name="android:layout_marginStart">-88dp</item>
        <item name="android:layout_marginEnd">-88dp</item>
    </style>


    <style name="DropDownBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="DropDownBase.Reg" parent="Regular16"/>
    <style name="DropDownBase.Small" parent="Regular15"/>
    <style name="DropDownBase.Large" parent="Regular18"/>

    <style name="DropDownReg" parent="DropDownBase.Reg"/>
    <style name="DropDownSmall" parent="DropDownBase.Small"/>
    <style name="DropDownLarge" parent="DropDownBase.Large"/>

    <style name="NoResultStyle" parent="Regular14">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/activity_margin_lg</item>
        <item name="android:paddingEnd">@dimen/activity_margin_lg</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black_26</item>
    </style>

</resources>
